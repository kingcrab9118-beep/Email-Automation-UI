# Email Automation Admin UI Configuration
# Copy this file to .env and configure the values for your environment

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Port for the admin UI web server (default: 5000)
UI_PORT=5000

# Enable debug mode (default: false) - NEVER enable in production
UI_DEBUG=false

# Secret key for session management and CSRF protection
# Generate a secure random key for production: python -c "import secrets; print(secrets.token_hex(32))"
UI_SECRET_KEY=your-secret-key-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (should match your main email automation system)
DATABASE_URL=sqlite:///email_automation.db

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable authentication (recommended if exposed beyond internal network)
# TODO: Enable authentication if exposed publicly
UI_REQUIRE_AUTH=false

# Authentication credentials (only used if UI_REQUIRE_AUTH=true)
UI_AUTH_USERNAME=admin
UI_AUTH_PASSWORD=your-secure-password-here

# CSRF protection (recommended: true)
UI_CSRF_ENABLED=true
UI_CSRF_TIME_LIMIT=3600

# Rate limiting
UI_RATE_LIMIT_ENABLED=true
UI_RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Host to bind to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
UI_HOST=0.0.0.0

# Allowed hosts (comma-separated, leave empty to allow all)
# TODO: Set allowed hosts for production deployment
UI_ALLOWED_HOSTS=

# Reverse proxy configuration (set to true if behind nginx, apache, etc.)
UI_BEHIND_PROXY=false

# =============================================================================
# HTTPS CONFIGURATION
# =============================================================================

# Enable HTTPS (recommended for production)
# TODO: Configure HTTPS settings for production
UI_USE_HTTPS=false

# SSL certificate and key paths (only used if UI_USE_HTTPS=true)
UI_SSL_CERT_PATH=/path/to/certificate.crt
UI_SSL_KEY_PATH=/path/to/private.key

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================

# Session timeout in seconds (default: 3600 = 1 hour)
UI_SESSION_TIMEOUT=3600

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
UI_LOG_LEVEL=INFO

# Log file path
UI_LOG_FILE=admin_ui.log

# =============================================================================
# PRODUCTION DEPLOYMENT NOTES
# =============================================================================

# For production deployment, ensure:
# 1. Set a strong UI_SECRET_KEY
# 2. Enable UI_REQUIRE_AUTH with strong credentials
# 3. Enable UI_USE_HTTPS with valid SSL certificates
# 4. Set UI_DEBUG=false
# 5. Configure UI_ALLOWED_HOSTS appropriately
# 6. Consider running behind a reverse proxy (nginx, apache)
# 7. Ensure proper firewall rules and network security
# 8. Regular security updates and monitoring

# =============================================================================
# INTEGRATION WITH MAIN EMAIL AUTOMATION SYSTEM
# =============================================================================

# The admin UI reads from the same database as your main email automation system.
# Ensure the DATABASE_URL matches your main system configuration.
# The UI does not require the Microsoft Graph API credentials as it only
# provides monitoring and control interfaces to the existing system.